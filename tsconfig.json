{
	"extends": "@tsconfig/node18-strictest/tsconfig.json",
	"compilerOptions": {
		"isolatedModules": true,
		"lib": ["esnext", "dom"],
		"module": "esnext",
		"noEmit": true,
		"paths": { "~/*": ["./src/*"] },
		"sourceMap": true,
		"target": "esnext",
		// leave the following to eslint
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		// leave to eslint: some extensions delete
		// unreachable code detected via ts too eagerly
		"allowUnreachableCode": true
	},
	"exclude": ["**/node_modules"],
	"include": ["./src", "./*.ts"],
	"ts-node": {
		"swc": true,
		"transpileOnly": true,
		"compilerOptions": {
			"isolatedModules": false,
			"lib": ["esnext"],
			"module": "commonjs",
			"target": "es2022"
		}
	}
}

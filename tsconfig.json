{
	"extends": "@tsconfig/node18-strictest/tsconfig.json",
	"compilerOptions": {
		"isolatedModules": true,
		"lib": ["esnext", "dom"],
		"module": "esnext",
		"noEmit": true,
		"paths": { "~/*": ["./src/*"] },
		"sourceMap": true,
		"target": "esnext",
		"types": []
	},
	"exclude": ["**/node_modules"],
	"include": ["./src", "./*.ts"]
}

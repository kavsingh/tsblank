{
	"extends": "@tsconfig/strictest/tsconfig.json",
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"lib": ["esnext"],
		"module": "esnext",
		"moduleResolution": "bundler",
		"noEmit": true,
		"target": "esnext",
		// leave the following to eslint
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"allowUnreachableCode": true
	},
	"exclude": ["**/node_modules"],
	"include": ["./*.ts", "./*.js", "./*.*.cjs"]
}

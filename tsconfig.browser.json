{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": "./tsconfig.base.json",
	"include": ["src"],
	"compilerOptions": {
		"composite": true,
		"jsx": "react-jsx",
		"jsxImportSource": "preact",
		"lib": ["esnext", "dom", "dom.iterable"],
		"module": "esnext",
		"moduleResolution": "bundler",
		"paths": { "#*": ["./src/*"] },
		"sourceMap": true,
		"types": ["rolldown-vite/client", "@testing-library/jest-dom/vitest"]
	}
}

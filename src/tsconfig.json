{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": "../tsconfig.base.json",
	"compilerOptions": {
		"jsx": "preserve",
		"jsxImportSource": "solid-js",
		"lib": ["esnext", "dom", "dom.iterable"],
		"module": "esnext",
		"moduleResolution": "bundler",
		"paths": { "#*": ["./*"] },
		"sourceMap": true,
		"types": ["@testing-library/jest-dom/vitest"]
	},
	"include": ["./**/*"]
}
